      <td>
        <% champ1_image = "http://opgg-static.akamaized.net/images/lol/champion/"+team_champ1.lol_namekey.to_s+".png" %>
        <% opp_champ1_image = "http://opgg-static.akamaized.net/images/lol/champion/"+opp_team_champ1.lol_namekey.to_s+".png" %>
        <h4 class="ui image header">
          <%= image_tag champ1_image %>
          <div class="content">
            <%= user1 %>
            <div class="sub header"><%= link_to team_champ1.name, team_champ1.op_url %>
          </div>
        </div>
      </h4></td>
      <td>
        User Win Percentage: </br>
        Matchup Win Percentage: <%= get_champ_matchup(team_champ1.lol_namekey, opp_team_champ1.lol_namekey) %></br>
        Public Win Percentage: <%= team_champ1.win_percentage %></br>
        Public Pick Percentage: <%= team_champ1.pick_percentage %>
